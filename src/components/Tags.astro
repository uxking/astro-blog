---
import type { CollectionEntry } from 'astro:content'
interface Props {
  post: CollectionEntry<'posts'>
}

const { post } = Astro.props
---

<div class='text-xs md:text-sm flex flex-row items-center justify-start'>
  <div class='items-center justify-center gap-2 flex mb-4'>
    <p class='bg-slate-600 text-white rounded-md p-1'>Tags:</p>

    {
      post.data.tags.map((tag) => (
        <a
          href={`/tags/${tag}`}
          class='bg-slate-300 rounded-lg p-1 hover:bg-slate-500 hover:text-slate-200 no-underline focus:ring-4 focus:outline-none focus:ring-slate-300'
        >
          {tag}
        </a>
      ))
    }
  </div>
</div>
